{
  "suggest.noselect": false,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.formatOnSaveFiletypes": ["python", "ruby", "vue", "rust"],
  "coc.preferences.extensionUpdateCheck": "daily",
  "javascript.suggestionActions.enabled": false,
  "eslint.autoFixOnSave": true,
  "tsserver.trace.server": "messages",
  "solargraph.diagnostics": true,
  "solargraph.autoformat": false,
  "solargraph.formatting": true,
  "solargraph.completion": true,
  "solargraph.hover": true,
  "list.source.grep.useLiteral": false,
  "list.source.grep.args": ["--vimgrep"],
  "list.source.symbols.defaultOptions": ["--interactive", "--number-select"],
  "languageserver": {
    "kotlin": {
      "command": "/home/casret/git/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
      "filetypes": ["kotlin"],
      "rootPatterns": ["build.gradle"],
      "settings": {"kotlin":{"compiler":{"jvm":{"target":"1.8"}}}}
    }
  },
  "Lua.runtime.version": "Lua 5.1",
  "Lua.diagnostics.globals": ["ARGV", "KEYS", "redis"],
  "prettier.disableLanguages": [],
  "python.formatting.provider": "black"
}

